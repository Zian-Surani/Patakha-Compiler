{
  "version": "2.0.0",
  "problemMatchers": [
    {
      "name": "patakha-error",
      "owner": "patakha",
      "fileLocation": [
        "relative",
        "${workspaceFolder}"
      ],
      "pattern": {
        "regexp": "^(.+):(\\d+):(\\d+) \\[([a-zA-Z0-9_]+)\\] (.+)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "code": 4,
        "message": 5,
        "severity": "error"
      }
    },
    {
      "name": "patakha-warning",
      "owner": "patakha",
      "fileLocation": [
        "relative",
        "${workspaceFolder}"
      ],
      "pattern": {
        "regexp": "^(.+):(\\d+):(\\d+) \\[warning:([a-zA-Z0-9_]+)\\] (.+)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "code": 4,
        "message": 5,
        "severity": "warning"
      }
    },
    {
      "name": "patakha-info",
      "owner": "patakha",
      "fileLocation": [
        "relative",
        "${workspaceFolder}"
      ],
      "pattern": {
        "regexp": "^(.+):(\\d+):(\\d+) \\[info:([a-zA-Z0-9_]+)\\] (.+)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "code": 4,
        "message": 5,
        "severity": "info"
      }
    }
  ],
  "tasks": [
    {
      "label": "Patakha: Compile current file (C backend)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "${file}",
        "--backend",
        "c",
        "--gcc",
        "--exe",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$patakha-error",
        "$patakha-warning"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Patakha: Run current executable",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& \"${fileDirname}\\${fileBasenameNoExtension}.exe\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Patakha: Run current file (C backend)",
      "dependsOn": [
        "Patakha: Compile current file (C backend)",
        "Patakha: Run current executable"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Patakha: Build current file (stack backend)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "${file}",
        "--backend",
        "stack",
        "--emit-stack"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$patakha-error",
        "$patakha-warning"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Patakha: Full diagnostics (current file)",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "${file}",
        "--backend",
        "c",
        "--emit-warnings",
        "--emit-tokens",
        "--emit-raw-ir",
        "--emit-ir",
        "--emit-stack",
        "--dump-ast",
        "--dump-ast-dot",
        "--dump-symbols",
        "--dump-cfg",
        "--dump-cfg-dot",
        "--dump-ll1",
        "--dump-slr"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$patakha-error",
        "$patakha-warning"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Patakha: Format current file",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "fmt",
        "${file}",
        "-w"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Patakha: Lint current file",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "lint",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$patakha-error",
        "$patakha-warning",
        "$patakha-info"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      }
    },
    {
      "label": "Patakha: Open Studio GUI",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha.studio"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Patakha: Open REPL",
      "type": "shell",
      "command": "python",
      "args": [
        "-m",
        "patakha",
        "repl"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Patakha: Install Patakha Color Extension",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\tools\\install_patakha_extension.ps1",
        "-Force"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}

